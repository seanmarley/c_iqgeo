{
    "compilerOptions": {
        "target": "ESNext",
        "module": "Preserve",
        "moduleResolution": "Bundler",
        "jsx": "react",
        "checkJs": true,
        "allowJs": true,
        "noEmit": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        // TBR: https://github.com/microsoft/TypeScript/issues/20110
        // `paths`, `include`, and `exclude` aren't merged when extending a config file,
        // if you want to add a value, you need to copy the whole thing with it.
        "paths": {
            "myWorld/*": ["../core/client/*"],
            "myWorld-base": ["../core/client/myWorld-client-namespace.js"],
            "myWorld-client": ["../core/client/myWorld-client-namespace.js"],
            "myWorld-client/react": ["../core/client/uiComponents/react"],
            "myWorld-native-services": ["../core/native/native-client.js"],
            "modules/*": ["./*"],
            "modules/dev_tools/*": ["./dev_tools/public/*"],
            "modules/vector_tile_styles/*": ["./vector_tile_styles/public/*"],
            "modules/reporting_example/*": ["./reporting_example/public/*"],
            "images/*": ["../core/client/images/*"],
            "config-shared": ["../core/config/shared"],
            "config-settings": ["../core/config/config-settings.js"]
        }
    },
    // Modules can add a `typings` directory and it'll be picked up automatically
    "include": ["./**/*.js", "./typings-core/*.d.ts", "./typings/*.d.ts"],
    "exclude": [
        "**/node_modules/**",
        "./dev_tools/anywhere/myw-capacitor-plugins.js",
        "./dev_tools/anywhere/nativeEnvForTests.js",
        "./dev_tools/anywhere/nodeTestEnv.bundle.js",
        "./dev_tools/public/lib/just-output-gui.js",
        "./dev_tools/public/lib/just-output.js",
        "./dev_db/public/lib/turf.min.js"
    ]
}
